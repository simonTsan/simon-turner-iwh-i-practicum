doctype html
html
    head
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
    .form-wrapper
        h1 Homepage

        p.link #[a(href=`/update-cobj`) Add/Update this table]
        .cards
            each artist in data
                .card
                    h2.card__name #{artist.properties.artist_name}
                    p.card__email Band: #{artist.properties.artist_band}
                    p.card__email Genre: #{artist.properties.artist_genre}
